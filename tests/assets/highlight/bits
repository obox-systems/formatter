fn main() {
    let num1: u32 = 42;
    let num2: u32 = 23;

    let and_result = num1 & num2;
    println!("Bitwise AND: {}", and_result);

    let or_result = num1 | num2;
    println!("Bitwise OR: {}", or_result);

    let xor_result = num1 ^ num2;
    println!("Bitwise XOR: {}", xor_result);

    let shift_left_result = num1 << 2;
    println!("Shift Left: {}", shift_left_result);

    let shift_right_result = num2 >> 1;
    println!("Shift Right: {}", shift_right_result);

    let complement_result = !num1;
    println!("Bitwise NOT: {}", complement_result);

    let leading_zeros = num1.leading_zeros();
    println!("Leading Zeros: {}", leading_zeros);

    let trailing_zeros = num2.trailing_zeros();
    println!("Trailing Zeros: {}", trailing_zeros);
}
